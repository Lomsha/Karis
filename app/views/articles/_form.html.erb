<div class="container bg-dark">
<div class= "row justify-content-center">

<div class = "col-10">
<%= render 'shared/errors', obj: @article %>



<%= form_with(model: @article, class: "shadow p-3 mb-3 bg-dark rounded  row justify-content-center", local: true) do |f| %>
<div class = "form-group row">
 <%= f.label  :title, class: "col-1 col-form-label text-light" %> 
<div class= "col-10">

<%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of Article" %>

 </div>
</div>



<div class = "form-group row mt-3">
<%= f.label  :description, class: "col-1 col-form-label text-light" %> 
<div class= "col-10">
<%= f.text_area :description, rows: 10, class: "form-control shadow rounded" , placeholder: "Write your Article here.." %>
</div>
</div>

<div   class="form-group row justify-content-center mt-2">
 <%= f.submit   class: "btn btn-primary   col-2 col-form-label " %> 
 </div>
    <% end %>
</div>

<div   class= "mb-3" 

<%=  link_to 'Return to articles', articles_path(@article), class: 'btn btn-primary  col-3 mb-3'  %>
</div>
</div>
</div>


    