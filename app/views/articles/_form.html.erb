<% if @article.errors.any? %>
<h2> The following errors prevented the article from being saved </h2>
<ul> 

<% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
<% end %>
 </ul>
<% end %>


<%= form_with(model: @article, local: true) do |f| %>


<div class="form-group mb-3">
 <%= f.label  :title, style: "display: block" %> <br/>

 <%= f.text_field :title, class: 'form-control form-control-lg' %>
</div>




<div  class="form-group mb-3">

 <%= f.label  :description, style: "display: block" %> <br/>

 <%= f.text_area :description, class: 'form-control form-control-lg' %>

</div>

<div   class="form-group mt-3">
 <%= f.submit   class: "btn btn-primary" %> 
 <%=  link_to 'Return to articles Listing ', articles_path(@article), class:"btn btn-outline-primary" %>

 </div>


    <% end %>
