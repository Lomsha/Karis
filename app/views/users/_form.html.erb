<div class="container bg-dark">
<div class= "row justify-content-center">

<div class = "col-10 mt-5">
<%= render 'shared/errors', obj: @user %>



<%= form_with(model: @user, class: "shadow p-3 mb-3 bg-dark rounded  row justify-content-center", local: true) do |f| %>
<div class = "form-group row">


 <%= f.label  :username, class: "col-1 col-form-label text-light" %> 
<div class= "col-10">

<%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter your username" %>

 </div>
</div>


<div class = "form-group row mt-3 mb-5">
<%= f.label  :email, class: "col-1 col-form-label text-light" %> 
<div class= "col-10 mb-5">
<%= f.email_field :email, class: "form-control shadow rounded" , placeholder: "Enter your email address." %>
</div>
</div>

<div class = "form-group row mt-3 mb-5">
<%= f.label  :password, class: "col-1 col-form-label text-light" %> 
<div class= "col-10 mb-3">
<%= f.password_field :password, class: "form-control shadow rounded" , placeholder: "Enter your password." %>
</div>
</div>

<div   class="form-group row justify-content-center mt-2">
 <%= f.submit  "Sign Up", class: "btn btn-primary   col-2 col-form-label " %> 
 </div>
    <% end %>
</div>

<div   class= "mb-3" 

<%=  link_to 'Return to articles', articles_path(@article), class: 'btn btn-primary  col-3 mb-3'  %>
</div>
</div>
</div>


    