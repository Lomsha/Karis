<h1 class="text-center mt-4 ">   Create a New category</h1>

<div class="container bg-dark min-vh-100 mb-5">
<div class= "row justify-content-center min-vh-100 mb-5">

<div class = "col-10 mt-5  ">

<%= render 'shared/errors', obj:  @category %>

<%= form_with(model: @category, class: "shadow p-3 mb-3 bg-dark rounded  row justify-content-center ", local: true) do |f| %>
<div class = "form-group row">


 <%= f.label  :name,"Category name", class: "col-1 col-form-label text-light" %> 
<div class= "col-10">

<%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>

 </div>
</div>


<div   class="form-group row justify-content-center mt-2  ">
 <%= f.submit class: "btn btn-primary   col-2 col-form-label" %> 
 </div>
    <% end %>
</div>

<div   class= "mb-3" 

<%=  link_to 'Return to articles', articles_path, class: 'btn btn-primary  col-3 mb-3'  %>
</div>
</div>
</div>


    

